
@model Product

<form enctype="multipart/form-data" method="post">
    <div class="mb-3">
        <label for="productName" class="form-label">Product Name</label>
        <input type="text" class="form-control" id="productName" name="Name" placeholder="Product Name" value="@Model?.Name">
    </div>
    <div class="mb-3">
        <label for="productDescription" class="form-label">Product Description</label>
        <input type="text" class="form-control" id="productDescription" name="Description" placeholder="Product Description" value="@Model?.Description">
    </div>
    <div class="mb-3">
        <label for="productPrice" class="form-label">Product Price</label>
        <input type="text" class="form-control" id="productPrice" name="Price" placeholder="Product Price" value="@Model?.Price">
    </div>
    <div class="mb-3">
        <img src="~/@Model?.ImageUrl" class="img-fluid img-thumbnail" style="max-width:100px" />
    </div>
    <div class="mb-3">
        <label for="formFile" class="form-label">Product Image</label>
        <input class="form-control" type="file" name="File" id="formFile">
    </div>
    <input type="submit" class="btn btn-primary" value="Save Product" />
    <button type="button" class="btn btn-danger" data-productid="@Model?.Id" id="btnProductDelete">Delete Product</button>
</form>
@section Scripts{
    <script>
        $(document).ready(function(){
            $('#btnProductDelete').click(function () {
               var con = confirm("Bu Ürün Silinecek Emin misiniz?");
               if(con){
                    var productId = $('#btnProductDelete').data('productid');
                    //Ajax
                    var obj = {};
                    obj.ProductId = productId;
                    $.ajax({
                        type:"post",
                        dataType:"json",
                        contentType:"application/json;charset=utf-8",
                        url:"@Url.Action("ProductDelete","Product")",
                        data:JSON.stringify(obj),
                        success:function(data){
                            console.log(data);
                            if(data=="1"){
                                location.href='@Url.Action("Index","Product")'
                            }
                        },
                        error:function(err){
                            console.log(err.statusText);
                        }
                    });

               }
            });
        });
    </script>
}